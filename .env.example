# Ntando Computer Environment Variables
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=Ntando Computer
APP_VERSION=1.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ntando-computer
MONGODB_TEST_URI=mongodb://localhost:27017/ntando-computer-test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# Render.com API
RENDER_API_KEY=your-render-api-key-here
RENDER_WEBHOOK_SECRET=your-webhook-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@ntando-computer.com
FROM_NAME=Ntando Computer

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=html,css,js,zip,jpg,jpeg,png,svg,webp
UPLOAD_DIR=uploads

# Domain Configuration
DOMAIN_EXTENSIONS=ntl.cloud,ntando.app,deploy.live
DEFAULT_DOMAIN_EXTENSION=ntl.cloud
CUSTOM_DOMAIN_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# SSL & Security
SSL_ENABLED=true
FORCE_HTTPS=true
HELMET_ENABLED=true
CORS_ORIGIN=http://localhost:8050,https://ntando-computer.onrender.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Deployment Settings
DEFAULT_BUILD_COMMAND=npm run build
DEFAULT_OUTPUT_DIR=dist
AUTO_DEPLOY_ENABLED=true
DEPLOYMENT_TIMEOUT=300000  # 5 minutes

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
UPTIME_MONITORING_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ntando-backups
BACKUP_S3_REGION=us-east-1

# CDN Configuration
CDN_ENABLED=true
CDN_DOMAIN=cdn.ntando-computer.com
CDN_CACHE_DURATION=86400  # 24 hours

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_CUSTOM_DOMAINS=true
ENABLE_TEAM_COLLABORATION=false
ENABLE_ADVANCED_ANALYTICS=false

# External Services
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Development Only
DEBUG=ntando:*
MOCK_DEPLOYMENT=true
SKIP_SSL_VERIFICATION=true